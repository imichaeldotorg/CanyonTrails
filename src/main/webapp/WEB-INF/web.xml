<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>CanyonTrails</display-name>

    <resource-ref>
        <res-ref-name>jdbc/derby</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>RegisterAccount</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.account_management.RegisterAccount
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAccount</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.account_management.UpdateAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.account_management.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.account_management.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Trails</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.page_controllers.MyTrails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTrail</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.page_controllers.AddTrail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTrailSubmit</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.page_controllers.AddTrailSubmit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecentUpdates</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.restEndpoints.RecentUpdates</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyTrails</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.restEndpoints.MyTrails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllTrails</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.restEndpoints.AllTrails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Trail</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.page_controllers.Trail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrailInfo</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.restEndpoints.TrailInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddImage</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.page_controllers.AddImageSubmit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchImage</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.restEndpoints.FetchImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecentImages</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.restEndpoints.RecentImages</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImagesForTrail</servlet-name>
        <servlet-class>edu.jhu.ep.su16.final_project.mmoore91.servlets.restEndpoints.ImagesForTrail</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterAccount</servlet-name>
        <url-pattern>/register-account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAccount</servlet-name>
        <url-pattern>/update-account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Trails</servlet-name>
        <url-pattern>/trails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTrail</servlet-name>
        <url-pattern>/trails/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTrailSubmit</servlet-name>
        <url-pattern>/trails/add-submit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecentUpdates</servlet-name>
        <url-pattern>/api/timeline.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyTrails</servlet-name>
        <url-pattern>/api/mytrails.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllTrails</servlet-name>
        <url-pattern>/api/all_trails.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Trail</servlet-name>
        <url-pattern>/trail/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Trail</servlet-name> <!-- for convenience -->
        <url-pattern>/trails/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrailInfo</servlet-name>
        <url-pattern>/api/trail/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrailInfo</servlet-name><!-- for convenience -->
        <url-pattern>/api/trails/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddImage</servlet-name>
        <url-pattern>/trail/add-image</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchImage</servlet-name>
        <url-pattern>/api/image/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecentImages</servlet-name>
        <url-pattern>/api/recent_images.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImagesForTrail</servlet-name>
        <url-pattern>/api/images_for_trail/*</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>AuthenticatedFilter</filter-name>
        <filter-class>edu.jhu.ep.su16.final_project.mmoore91.filters.AuthenticatedFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticatedFilter</filter-name>
        <url-pattern>/update-account</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/trails</url-pattern>
        <url-pattern>/trails/*</url-pattern>
        <url-pattern>/api/timeline.json</url-pattern>
        <url-pattern>/api/mytrails.json</url-pattern>
        <url-pattern>/api/all_trails.json</url-pattern>
        <url-pattern>/trail/*</url-pattern>
        <url-pattern>/api/trail/*</url-pattern>
        <url-pattern>/api/trails/*</url-pattern>
        <url-pattern>/api/images_for_trail/*</url-pattern>
    </filter-mapping>


</web-app>
